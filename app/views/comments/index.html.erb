
 <div class="container">
   <div class="row">
     <div class="col-lg-12 text-center">
       <h1>List Of Comment</h1>
       <%= link_to "Create Comment",new_topic_post_comment_path %>

     </div>
    </div>
  </div>
</div>


       <div class="col-lg-4 col-lg-offset-2">
 <p> <% @comments.each do |comment| %></p>

   <h3><%= comment.body %></h3>


   <p><%= link_to "Delete Comment", topic_post_comment_path(comment.post.topic,comment.post,comment), method: :delete, data: {confirm: "Are you sure you want to delete?"} %></p>
   <p><%= link_to "Edit Comment", edit_topic_post_comment_path(comment.post.topic,comment.post,comment)%></p>


</div>


  </div>
 </div>
</div>

<% end %>
