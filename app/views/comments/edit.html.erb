<%= form_for(@comment, url: topic_post_comment_path(@comment), html: { id: "topic-update-form" }) do |f| %>
    <h1 class="text-center">
    Update Comment
    </h1>

    <div class="row">
           <div class="col-lg-4 col-lg-offset-2">
       <div class="form-group">
         <h4> <%= f.label :title_field, "Body" %> </h4>
         <%= f.text_field :body, required: true, id: "comment_title_field", class: 'form-control' %>
         <h5> </h5>
         <%= f.submit "Update Comment", class: "btn btn-success btn-lg" %>
       </div>
         </div>

  

  <% end %>
