
<%= form_for(@comments, url: topic_post_comments_path, html: { id: "comments-create-form" }) do |f| %>
<div class="container">
  <div class="row">
    <div class="col-lg-12 text-left">
      <h2>Create Comment</h2>
    </div>
   </div>
 </div>
 <div class="row">
        <div class="col-lg-4 col-lg-offset-2">
    <div class="form-group">
      <h4> <%= f.label :title_field, "Body" %> </h4>
      <%= f.text_field :body, required: true, id: "comment_title_field", class: 'form-control' %>
    </div>
      </div>


    </div>

      <div class="col-lg-4 col-lg-offset-2 text-center">
      <%= f.submit "Create comment", class: "btn btn-success btn-lg" %>
    </div>
  <% end %>
