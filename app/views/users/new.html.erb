<%= form_for(@user, url: users_path, html: { id: "user-create-form" }) do |f| %>
    <h1 class="text-center">
      Register
    </h1>

    <div class="form-group">
      <h4> <%= f.label :email_field, "Username" %> </h4>
      <%= f.text_field :email, required: true, id: "username_field", class: 'form-control' %>
    </div>

    <div class="form-group">
      <h4> <%= f.label :password_field, "Password" %> </h4>
      <%= f.password_field :password, id: "topic_description_field", class: 'form-control' %>
    </div>

    <div class="form-group text-center">
      <%= f.submit "Register", class: "btn btn-success btn-lg" %>
    </div>
  <% end %>
