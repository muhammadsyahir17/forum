
 <div class="container">
   <div class="row">
     <div class="col-lg-12 text-center">
       <h1>Topics To Discuss</h1>
       <%= link_to "Create Post",new_topic_post_path %>
     </div>
    </div>
  </div>
</div>

     <div class="row">
       <div class="col-lg-4 col-lg-offset-2">
 <p> <% @posts.each do |post| %>   </p>

<%= link_to post.title, topic_post_comments_path(post.topic,post) %>
      <div class="post">
        <div class="row">
        <div class="col-lg-4">

    </div>
    <div>

      <div>

      <h5><%= post.body %></h5>
      <%post.comments.each do |comment| %>
     <p> <%= comment.body %></p>



 <%end%>

 <p><%= link_to "Delete Post", topic_post_path(post.topic,post), method: :delete, data: {confirm: "Are you sure you want to delete?"} %></p>
<p><%= link_to "Edit Post", edit_topic_post_path(post.topic,post)%></p>
  </div>
     </div>
    </div>
   </div>

  <% end %>
