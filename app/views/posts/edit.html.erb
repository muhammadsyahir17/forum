<%= form_for(@post, url: topic_post_path(@post), html: { id: "topic-update-form" }) do |f| %>
    <h1 class="text-center">
      Create Post
    </h1>

    <div class="form-group">
      <h4> <%= f.label :title_field, "Post" %> </h4>
      <%= f.text_field :title, required: true, id: "topic_title_field", class: 'form-control' %>
    </div>

    <div class="form-group">
      <h4> <%= f.label :body_field, "Body" %> </h4>
      <%= f.text_field :body, id: "topic_description_field", class: 'form-control' %>
    </div>

    <div class="form-group text-center">
      <%= f.submit "Update Post", class: "btn btn-success btn-lg" %>
    </div>


  <% end %>
