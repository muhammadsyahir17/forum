<%= form_for(@post, url: topic_posts_path, html: { id: "posts-create-form" }) do |f| %>
<div class="container">
  <div class="row">
    <div class="col-lg-12 text-left">
      <h2>Create Post</h2>
    </div>
   </div>
 </div>
<div class="row">
          <div class="col-lg-4 col-lg-offset-2">
            <div class="form-group">
      <h4> <%= f.label :title_field, "Post" %> </h4>
      <%= f.text_field :title, required: true, id: "post_title_field", class: 'form-control' %>
    </div>
       </div>
             </div>
       <div class="row">
               <div class="col-lg-4 col-lg-offset-2">
     <div class="form-group">

      <h4> <%= f.label :text_field, "Body" %> </h4>
      <%= f.text_field :body, id: "post_description_field", class: 'form-control' %>
    </div>
      </div>
            </div>

    </div>

      <div class="col-lg-4 col-lg-offset-2 text-center">
        <h4>
        <%= link_to "Back To List",topic_posts_path %>
      </h4>
      <%= f.submit "Create Post", class: "btn btn-success btn-lg" %>
    </div>
  </div>
  <% end %>
